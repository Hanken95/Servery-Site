@page
@model SurveySite.Pages.QuestionPages.AddQuestionToSurveyModel

@{
    ViewData["Title"] = "AddQuestionToSurvey";
}

<h1>Add question to existing survey</h1>

<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Question.QuestionString)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Question.QuestionString)
    </dd>
</dl>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <input type="hidden" asp-for="Question.Id" />
                <label asp-for="SurveyId" class="control-label">Survey</label>
                <select asp-for="SurveyId" class="form-control">
                    @foreach (var survey in Model.Surveys)
                    {
                        <option value="@survey.Id">@survey.SurveyName</option>
                    }
                </select>
                <span asp-validation-for="SurveyId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
