@page
@model SurveySite.Pages.AnswerPages.AddAnswerToQuestionModel

@{
    ViewData["Title"] = "AddAnswerToQuestion";
}

<h1>Add answer to existing question</h1>

<hr />
<dl class="row">
    <dt class="col-sm-2">
        @Html.DisplayNameFor(model => model.Answer.AnswerString)
    </dt>
    <dd class="col-sm-10">
        @Html.DisplayFor(model => model.Answer.AnswerString)
    </dd>
</dl>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div class="form-group">
                <input type="hidden" asp-for="Answer.Id" />
                <label asp-for="QuestionId" class="control-label">Question</label>
                <select asp-for="QuestionId" class="form-control">
                    @foreach (var question in Model.Questions)
                    {
                        <option value="@question.Id">@question.QuestionString</option>
                    }
                </select>
                <span asp-validation-for="QuestionId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
