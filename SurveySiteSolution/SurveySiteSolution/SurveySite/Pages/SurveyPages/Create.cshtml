@page
@model SurveySite.Pages.SurveyPages.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h4>Survey</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Survey.SurveyName" class="control-label"></label>
                <input asp-for="Survey.SurveyName" class="form-control" />
                <span asp-validation-for="Survey.SurveyName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="@Model.NumberOfQuestions" class="control-label"></label>
                <input type="number" asp-for="@Model.NumberOfQuestions" class="form-control">
                <span asp-validation-for="@Model.NumberOfQuestions" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to survey list</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
